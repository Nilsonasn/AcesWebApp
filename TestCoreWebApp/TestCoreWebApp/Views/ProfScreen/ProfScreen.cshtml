
@model AcesWebApp.Models.ProfScreenModel

@{
    Layout = null;
}

@{
    var content = Model;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProfScreen</title>
    <link rel="stylesheet" href="~/css/tablestyles.css">
</head>
<body>
    <h1>Prof Screen</h1>

    <form enctype="multipart/form-data" asp-controller="ProfScreen" asp-action="Assignments" method="post" class="mt-3">
        <div class="container" style="width:30%;margin-top:2%;margin-left:auto;margin-right:auto">
            <!--<form asp-controller="ProfSceenController" asp-action="GetClassList">-->
            <select style="width:100%" asp-for="className" asp-items="@(new SelectList(Model.classList, "Name", "Name"))"></select>
            <!--</form>-->


            @Html.TextBoxFor(model => model.assignmentName, new { style = "width:100%", @placeholder = "Assignment Name" })
            <br>
            @Html.TextBoxFor(model => model.securityKey, new { style = "width:100%", @placeholder = "Security Key" })
            <br>
            <div class="form-group row">
                <label asp-for="professorUnitTest" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="professorUnitTest" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose Professor Unit Test</label>
                    </div>
                </div>
            </div>
            <a href="" style="margin-right:15%">Delete Class</a> <a href="" style="margin-right:20%">Create Class</a> <a href="" style="margin-right:2%">Check</a>
            <button type="submit" class="btn btn-primary">Check</button>


        </div>




        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>

    <form enctype="multipart/form-data" asp-controller="ProfScreen" asp-action="" method="post" class="mt-3">
        <div class="container" style="width:30%;margin-top:2%;margin-left:auto;margin-right:auto">

            @Html.TextBoxFor(model => model.createClassName, new { style = "width:100%", @placeholder = "Class Name" })
            <br>
            @Html.TextBoxFor(model => model.createOrgName, new { style = "width:100%", @placeholder = "Organization Name" })
            <br>
            <div class="form-group row">
                <label asp-for="roster" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="roster" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose Roster</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Create Class</button>

        </div>
    </form>

    <form enctype="multipart/form-data" asp-controller="ProfScreen" asp-action="" method="post" class="mt-3">
        <div class="container" style="width:30%;margin-top:2%;margin-left:auto;margin-right:auto">

            <select style="width:100%" asp-for="className" asp-items="@(new SelectList(Model.classList, "Name", "Name"))"></select>
            <br>

            <button type="submit" class="btn btn-primary">Delete Class</button>

        </div>
    </form>



</body>
</html>
