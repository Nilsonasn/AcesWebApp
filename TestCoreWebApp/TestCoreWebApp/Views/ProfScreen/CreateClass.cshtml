@model AcesWebApp.ViewModels.ProfScreenViewModel

<h1>Create a Class</h1>
<form asp-action="ProfScreen" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="classroom.className" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="classroom.className" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="classroom.orgName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="classroom.orgName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="roster" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="file" asp-for="roster" accept=".csv"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Create Class" />
        </div>
    </div>
</form>


